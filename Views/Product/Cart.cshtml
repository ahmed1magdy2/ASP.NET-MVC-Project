    <ul>

        <li><a href="/Product/Cart">Cart</a></li>
        <li><a href="/User/UserHistory">User History</a></li>
        <li><a href="/Home/contact">contactus</a></li>
        <li><a href="/Home/about">About</a></li>
        <li><a href="User/Logout">Logout</a></li>
    </ul>
   

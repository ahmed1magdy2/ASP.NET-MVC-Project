@model List<Product>
<div class="navbar">
    <a href="/Home/Index"><h1 style="margin-left:111px;color: rgb(255, 255, 255);font-family:Arial, Helvetica, sans-serif">H Λ R B O R</h1></a>
    <ul>

        <li><a href="/Product/Cart">Cart</a></li>
        <li><a href="/User/UserHistory">User History</a></li>
        <li><a href="/Home/contact">contactus</a></li>
        <li><a href="/Home/about">About</a></li>
        <li><a href="/User/Logout">Logout</a></li>
    </ul>
</div>
<hr style="height:5px;" />
<h1 style="margin:20px;margin-left:80px; color: rgb(255, 255, 255);font-family:Arial">Available Products</h1>
<body>

        @foreach (var item in Model)
        {
            <form method="post" asp-action="Show" asp-controller="Course" enctype="multipart/form-data">
                <div class="col-md-4" style="border-bottom: 2px solid transparent;background: rgba(255,255,255,.1);">
                    <div class="card box-shadow p-1" style="width:350px">
                        <div style="text-align:center; font-weight:bold;font-size:large; font-family:'Trebuchet MS';">    @item.Name </div>
                        <img width="340" height="250" src="/Img/@item.Image" />
                        <ul class="list-group-item">
                            <li class="list-group-item">Available: @item.Quantity</li>
                            <li class="list-group-item">Price: @item.Price</li>
                            @{
                                int num = 0;
                            }
                            <li class="list-group-item">Quantity <input type="number" name="num" asp-for="@num"></li>
                            <li class="list-group-item"><button type="submit" asp-route-id="@item.Id" class="btn btn-primary">Add To Cart</button></li>
                        </ul>
                    </div>
                </div>
            </form>
        }
</body>
